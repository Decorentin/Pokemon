<Window x:Class="Pokemon.View.EndBattleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Battle Result" Height="200" Width="400">
    <Grid>
        <Label Name="BattleResultLabel" Content="Battle Result" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" Margin="0,10,0,0"/>
        <Button Name="RestartBattleButton" Content="Restart Battle" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="150" Height="40" Margin="50,0,0,20" Click="RestartBattleButton_Click"/>
        <Button Name="QuitButton" Content="Quit" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="40" Margin="0,0,50,20" Click="QuitButton_Click"/>
    </Grid>
</Window>

