<Window x:Class="Pokemon.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="350" Width="400">
    <Grid>
        <TextBlock Text="Register" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0" />

        <StackPanel Margin="50,70,50,50">
            <!-- Username Field -->
            <Label Content="Username:" />
            <TextBox x:Name="UsernameTextBox" />

            <!-- Password Field -->
            <Label Content="Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="PasswordBox" />

            <!-- Confirm Password Field -->
            <Label Content="Confirm Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="ConfirmPasswordBox" />

            <!-- Register Button -->
            <Button Content="Register" HorizontalAlignment="Center" Margin="0,20,0,0" Padding="10,5"
                    Click="RegisterButton_Click" />
        </StackPanel>
    </Grid>
</Window>
